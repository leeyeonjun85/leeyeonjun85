<Window x:Class="AccessKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessKey"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" 
               Grid.Column="0" 
               Content="_Email :"
               Target="{Binding ElementName=txtEmail}"/>
        <TextBox x:Name="txtEmail"
                 Grid.Row="0" 
                 Grid.Column="1"/>

        <Label Grid.Row="1" 
               Grid.Column="0" 
               Content="_Name :"
               Target="{Binding ElementName=txtName}"/>
        <TextBox x:Name="txtName"
                 Grid.Row="1" 
                 Grid.Column="1"/>

        <Label Grid.Row="2" 
               Grid.Column="0" 
               Content="_Gender :"
               Target="{Binding ElementName=txtGender}"/>
        <TextBox x:Name="txtGender"
                 Grid.Row="2" 
                 Grid.Column="1"/>

        <Label Grid.Row="3" 
               Grid.Column="0" 
               Content="_Phone :"
               Target="{Binding ElementName=txtPhone}"/>
        <TextBox x:Name="txtPhone"
                 Grid.Row="3" 
                 Grid.Column="1"/>

        <Button Grid.Row="4" 
                Grid.ColumnSpan="2" 
                Content="_Save" 
                Click="Button_Click"/>

    </Grid>
</Window>
