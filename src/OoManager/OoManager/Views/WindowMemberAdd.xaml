<Window x:Class="OoManager.Views.WindowMemberAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OoManager.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="WindowMemberAdd" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <ComboBox
            Grid.Row="1" Grid.Column="0"
            Grid.ColumnSpan="1"
            Margin="5 0"
            materialDesign:HintAssist.Hint="학년"
            ItemsSource="{Binding AppData.MemberData.GradeStrings}"
            SelectedValue="{Binding GradeString}"/>

        <TextBox
            Grid.Row="1" Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="5 0"
            materialDesign:HintAssist.Hint="이름"
            Text="{Binding Name}"
            VerticalAlignment="Center"
            />
        <TextBox
            Grid.Row="1" Grid.Column="2"
            Grid.ColumnSpan="1"
            Margin="5 0"
            materialDesign:HintAssist.Hint="교육비"
            Text="{Binding Money}"
            VerticalAlignment="Center"
            />

        <ComboBox
            Grid.Row="1" Grid.Column="5"
            Grid.ColumnSpan="1"
            Margin="5 0"
            materialDesign:HintAssist.Hint="재원"
            ItemsSource="{Binding AppData.MemberData.StateStrings}"
            SelectedValue="{Binding Status}"/>

        <TextBox
            Grid.Row="2" Grid.Column="0"
            Grid.ColumnSpan="1"
            Margin="5 0"
            materialDesign:HintAssist.Hint="전화번호"
            Text="{Binding Phonenumber}"
            VerticalAlignment="Center"
            />

        <TextBox
            Grid.Row="2" Grid.Column="2"
            Grid.ColumnSpan="1"
            Margin="5 0"
            materialDesign:HintAssist.Hint="수업일정"
            Text="{Binding ClassPlan}"
            VerticalAlignment="Center"
            />

        <TextBox
            Grid.Row="3" Grid.Column="0"
            Grid.RowSpan="2" Grid.ColumnSpan="6"
            Margin="5 0"
            materialDesign:HintAssist.Hint="메모"
            Text="{Binding Memo}"
            />  

        <Grid
            Grid.Row="5" Grid.Column="0"
            Grid.ColumnSpan="6"
            Grid.RowSpan="1"
            Margin="7 3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button 
                Grid.Row="1" Grid.Column="0"
                Margin="10 0"
                Content="OK" 
                Command="{Binding BtnOkCommand}"/>
            <Button 
                Grid.Row="1" Grid.Column="1"
                Margin="10 0"
                Content="Cancel" 
                Command="{Binding BtnCancelCommand}"/>
        </Grid>
    </Grid>
</Window>
