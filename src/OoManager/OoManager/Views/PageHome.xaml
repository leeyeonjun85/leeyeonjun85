<Page x:Class="OoManager.Views.PageHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OoManager"
      xmlns:ViewModels="clr-namespace:OoManager.ViewModels"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800">
    <Page.DataContext>
        <ViewModels:PageHomeViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="1" Grid.Column="2"
            Grid.ColumnSpan="3"
            FontSize="30"
            Text="메인페이지입니다."/>

        <TextBlock
            Grid.Row="1" Grid.Column="1"
            Grid.ColumnSpan="1"
            FontSize="30"
            Text="{Binding AppModel.TestInt}"/>
        <TextBox 
            Grid.Row="2" Grid.Column="1"
            Grid.ColumnSpan="3"
            FontSize="16"
            VerticalAlignment="Center"
            Text="{Binding AppModel.ChatSendText}"/>
        <Button 
            Grid.Row="2" Grid.Column="4"
            Content="Chat"
            Command="{Binding ChatSendCommand}"/>
        <TextBlock
            Grid.Row="3" Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.RowSpan="3"
            FontSize="16"
            Text="{Binding AppModel.ChatText}"/>
    </Grid>
</Page>
