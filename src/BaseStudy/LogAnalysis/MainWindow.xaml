<Window x:Class="LogAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogAnalysis"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style x:Key="StatusBarTextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>




        <TextBox
            Grid.Row="0" Grid.Column="0"
            Grid.ColumnSpan="5"
            d:Text="C:\Test1\Test2"
            Text="{Binding TbxDirecotyPathText}"
            Name="TbxSavePath"/>
        <Button 
            Grid.Row="0" Grid.Column="5"
            Content="파일 선택" 
            IsEnabled="{Binding BtnFilePathIsEnabled}"
            Command="{Binding BtnFilePathCommand}"
            Name="BtnFilePath"/>

        <TextBox
            Grid.Row="1" Grid.Column="0"
            Grid.RowSpan="3" Grid.ColumnSpan="6"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            Background="LightYellow"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Top"
            Height="NaN"
            d:Text="임시 문자열"
            Text="{Binding TextBoxText}" 
            />


        <DataGrid
            Grid.Row="4" Grid.Column="0"
            Grid.RowSpan="2" Grid.ColumnSpan="6"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            AutoGenerateColumns="False"
            HeadersVisibility="All"
            CanUserAddRows="False"
            Margin="5"
            d:ItemsSource="{d:SampleData ItemCount=4}"
            ItemsSource="{Binding DataGridList}" 
            Name="queueDataGrid" >
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Binding="{Binding Category}" 
                    Header="Category" 
                    Width="2*"
                    IsReadOnly="True"/>
                <DataGridTextColumn 
                    Binding="{Binding DateTime}"
                    Header="DateTime" 
                    Width="3*" 
                    IsReadOnly="True">
                    <!--<DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>-->
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Binding="{Binding Message}"
                    Header="Message" 
                    Width="5*" 
                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>








        <StatusBar
        Grid.Row="99" Grid.Column="0"
        Grid.RowSpan="1" Grid.ColumnSpan="5">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem>
                <TextBlock
                d:Text="Status : 현재상태"
                Text="{Binding StatusBar1}"
                Name="StatusBar1" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <TextBlock
                d:Text="여러가지 메시지"
                Text="{Binding StatusBar2}"
                Name="StatusBar2" />
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <ProgressBar
                Value="{Binding StatusBarProgressBar}" 
                Width="90" 
                Height="16" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
